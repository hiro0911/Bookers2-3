<div class="body">
  <div class="container">
    <p id="notice"></p>
    <div class="row">
      <div class="col-xs-3">
        <h2>User info</h2>
        <%= attachment_image_tag @user, :profile_image, size: "50x50", fallback: "no_image", class: "attachment user profile_image fallback" %>
        <table class="table">
          <tbody><tr></tr> 
            <tr>
             <th>name</th>
             <th><%= @user.name %></th>
           </tr>
           <tr>
             <th>introduction</th>
             <th><%= @user.introduction %></th>
           </tr>
         </tbody></table>
         <div class="row">
          <%= link_to "", edit_user_path(current_user), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench edit_user_23690" %>
        </div>
        <h2>New book</h2>
        <%= form_with model: @book, url: "/books", method: :post, local: true do |f| %>
        <%= render 'layouts/error_messages', model: f.object %>
        <div class="field row">
          <%= f.label :title, "Title" %>
          <%= f.text_field :title, class: "col-xs-12 book_title" %>
        </div>
          <div class="field row">
            <%= f.label :body, "Opinion" %>
            <%= f.text_area :body, class: "col-xs-12 book_body" %>
          </div>
          <div class="actions row">
            <%= f.submit "Create Book", class: "btn btn-primary col-xs-12" %>
          </div>
          <% end %>
        </div>

